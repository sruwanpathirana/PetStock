{
    "id": {{ article.id }},
    "title": {{ article.title|serialize }},
    "authors": [
        {% for author in article.authors %}
            {
                "id": {{ author.id }},
                "name": {{ author.name|serialize }}
            }
            {% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    "content": {{ article.content|serialize }},
    "url": {{ article.url|serialize }},
    "ceratedAt": {{ article.createdAt|date("Y-m-d")|serialize }}
}